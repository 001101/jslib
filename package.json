    "@angular/http": "5.2.0",
    "@angular/platform-browser": "5.2.0",
    "@angular/platform-browser-dynamic": "5.2.0",
    "@angular/router": "5.2.0",
    "@angular/upgrade": "5.2.0",
    "@types/lunr": "2.1.5",
    "@types/node-forge": "0.7.1",
    "@types/webcrypto": "0.0.28",
    "angular2-toaster": "4.0.2",
    "core-js": "2.4.1",
    "lunr": "2.1.6",
    "node-forge": "0.7.1",
    "rimraf": "^2.6.2",
    "rxjs": "5.5.6",
    "tslint": "^5.8.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.7.1",
    "zone.js": "0.8.19"
  }
